<p id="notice"><%= notice %></p>

<h1>Listing Admin Discounts</h1>

<table>
  <thead>
    <tr>
      <th>Started at</th>
      <th>Ended at</th>
      <th>Title</th>
      <th>Description</th>
      <th>Variant</th>
      <th>Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_discounts.each do |admin_discount| %>
      <tr>
        <td><%= admin_discount.started_at %></td>
        <td><%= admin_discount.ended_at %></td>
        <td><%= admin_discount.title %></td>
        <td><%= admin_discount.description %></td>
        <td><%= admin_discount.variant %></td>
        <td><%= admin_discount.amount %></td>
        <td><%= link_to 'Show', admin_discount %></td>
        <td><%= link_to 'Edit', edit_admin_discount_path(admin_discount) %></td>
        <td><%= link_to 'Destroy', admin_discount, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

